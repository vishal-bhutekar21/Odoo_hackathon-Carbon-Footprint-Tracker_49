<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0FDFA"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Our App"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutapp"
                    android:textColor="@color/gray_800"
                    android:fontFamily="sans-serif-condensed"

                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="16dp" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/app_logo"
                    android:contentDescription="Screenshot of the app showing its main features"
                    android:scaleType="centerCrop"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet the Developers"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="16dp" />

                <!-- Developer 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/img_vishal"

                        android:contentDescription="Portrait of Developer 1"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vishal Bhutekar"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="18sp"

                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Full stack developer"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/instagram1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="Instagram"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/github1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_github"
                            android:contentDescription="GitHub"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/linkedin1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_linkedin"
                            android:contentDescription="LinkedIn"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Developer 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_chaitany"
                        android:contentDescription="Portrait of Developer 2"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chaitany Kakde"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-light"

                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Stack Developer"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-condensed"

                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/instagram2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="Instagram"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/github2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_github"
                            android:contentDescription="GitHub"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/linkedin2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_linkedin"
                            android:contentDescription="LinkedIn"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Developer 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/user_satwik"
                        android:contentDescription="Portrait of Developer 3"
                        android:scaleType="centerInside"                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satwik Mahajan"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-light"

                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frontend Developer"
                        android:fontFamily="sans-serif-condensed"

                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/instagram3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="Instagram"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/github3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_github"
                            android:contentDescription="GitHub"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/linkedin3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_linkedin"
                            android:contentDescription="LinkedIn"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:text="Our Feedbacks !!"
                    android:id="@+id/ourfeedbacks"
                    android:fontFamily="sans-serif-condensed-light">

                </Button>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"

        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>