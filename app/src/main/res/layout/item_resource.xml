<!-- res/layout/item_resource.xml -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp"
    app:strokeColor="@color/teal_600"
    app:strokeWidth="1dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/ivIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_resource"
            android:tint="@color/teal_600"
            android:contentDescription="Resource Icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvResourceTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/teal_600"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/fontbold" />

            <TextView
                android:id="@+id/tvResourceDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:fontFamily="@font/regular" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>