<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Main MaterialCardView -->
<com.google.android.material.card.MaterialCardView
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:cardCornerRadius="16dp"
app:cardElevation="4dp"
app:cardBackgroundColor="#FFFFFF"
android:layout_marginBottom="16dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

<!-- Header -->
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Your Carbon Footprint"
    android:textColor="#1A1A2E"
    android:fontFamily="@font/fontbold"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_marginBottom="12dp"/>

<!-- Horizontal ScrollView -->
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

<!-- Card 1: Fuel Emissions -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#FFEBEE"
android:layout_marginEnd="12dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="12dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_feul"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fuel"
        android:textColor="#1A1A2E"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/medium"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/fuel_emissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.2 kg CO₂e"
        android:textColor="#EF5350"
        android:fontFamily="@font/fontbold"
        android:textSize="14sp"
        android:layout_marginTop="4dp"/>
</LinearLayout>
</com.google.android.material.card.MaterialCardView>

    <!-- Card 2: Electric Emissions -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
app:cardCornerRadius="12dp"
app:cardElevation="2dp"
app:cardBackgroundColor="#E8F5E9"
    android:layout_marginEnd="12dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="12dp">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_electricity"
 />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Electric"
    android:textColor="#1A1A2E"
    android:textSize="16sp"
    android:fontFamily="@font/medium"

    android:textStyle="bold"
    android:layout_marginTop="8dp"/>

<TextView
    android:id="@+id/electric_emissions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="2.8 kg CO₂e"
    android:fontFamily="@font/fontbold"
    android:textColor="#4CAF50"
    android:textSize="14sp"
    android:layout_marginTop="4dp"/>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 3: Flight Emissions -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
app:cardCornerRadius="12dp"
app:cardElevation="2dp"
app:cardBackgroundColor="#E3F2FD"
    android:layout_marginEnd="12dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="12dp">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_flight"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Flight"
    android:fontFamily="@font/medium"

    android:textColor="#1A1A2E"
    android:textSize="16sp"
    android:textStyle="bold"
    android:layout_marginTop="8dp"/>

<TextView
    android:id="@+id/flight_emissions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="5.1 kg CO₂e"
    android:fontFamily="@font/fontbold"
    android:textColor="#2196F3"
    android:textSize="14sp"
    android:layout_marginTop="4dp"/>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 4: Transport Emissions -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
app:cardCornerRadius="12dp"
app:cardElevation="2dp"
app:cardBackgroundColor="#E0F7FA"
    android:layout_marginEnd="12dp">

<LinearLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:gravity="center"
android:padding="12dp">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_transport"
     />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Transport"
    android:textColor="#1A1A2E"
    android:fontFamily="@font/medium"

    android:textSize="16sp"
    android:textStyle="bold"
    android:layout_marginTop="8dp"/>

<TextView
    android:id="@+id/transport_emissions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="3.5 kg CO₂e"
    android:fontFamily="@font/fontbold"
    android:textColor="#00ACC1"
    android:textSize="14sp"
    android:layout_marginTop="4dp"/>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Card 5: Industry Emissions -->
<com.google.android.material.card.MaterialCardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
app:cardCornerRadius="12dp"
app:cardElevation="2dp"
app:cardBackgroundColor="#FCE4EC"
    android:layout_marginEnd="12dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
android:orientation="vertical"
android:gravity="center"
android:padding="12dp">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/ic_industry"
     />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Industry"
    android:textColor="#1A1A2E"
    android:fontFamily="@font/medium"

    android:textSize="16sp"
    android:textStyle="bold"
    android:layout_marginTop="8dp"/>

<TextView
    android:id="@+id/industry_emissions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="6.0 kg CO₂e"
    android:fontFamily="@font/fontbold"
    android:textColor="#F06292"
    android:textSize="14sp"
    android:layout_marginTop="4dp"/>
</LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </LinearLayout>