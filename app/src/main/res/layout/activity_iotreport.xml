<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:background="@color/white"
        android:id="@+id/scrollView"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1️⃣ Header (Company Logo + Name + Report Details) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/companyLogo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app_logo"
                android:contentDescription="Company Logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/companyName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TechCorp Solutions"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/reportTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Environmental Impact Assessment Report"
                    android:textSize="14sp"
                    android:textColor="@color/gray"/>
            </LinearLayout>


        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Report ID -->
                <TextView
                    android:id="@+id/reportId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report ID: ECO-2025-0012"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <!-- Generation Date -->
                <TextView
                    android:id="@+id/generationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generated: 9/12/2025"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />

                <!-- Divider Line -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_marginVertical="8dp"/>

                <!-- Company Name -->
                <TextView
                    android:id="@+id/companyName1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company: AgriVision Tech Pvt Ltd"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <!-- Mobile Number -->
                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile: +91 9322067937"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <!-- Email -->
                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: info@agrivision.com"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

                <!-- Location -->
                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Aurangabad, Maharashtra"
                    android:textSize="14sp"
                    android:textColor="@color/black" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- 2️⃣ Executive Summary Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/executiveSummaryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Executive Summary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/carbonFootprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,194 kg CO₂e"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary"/>

                <TextView
                    android:id="@+id/carbonIncrease"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+12% vs Previous Year"
                    android:textSize="14sp"
                    android:textColor="@color/red"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/keyAchievements"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Achievements:\n- Total Emissions for February 2025: 1,540 tons CO₂\n- Highest Emission Day: 15th February (250 tons)\n- Primary Emission Source: Electricity (45%)"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/scope1Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scope 1: 0.0 kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/scope2Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scope 2: 0.0 kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/scope3Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scope 3: 0.0 kg"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3️⃣ Monthly Emissions Trend Graph -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/monthlyTrendTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monthly CO₂ Emissions Trend"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 4️⃣ Emission Sources Breakdown (Pie Chart) -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/emissionBreakdownTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emission Sources Breakdown"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>

                <com.github.mikephil.charting.charts.PieChart
                    android:id="@+id/pieChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginTop="12dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Certification & Compliance and Contact Information Section -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2">

            <!-- Certification & Compliance -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/certificationTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Certification and Compliance"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/certificationList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="• ISO 14001:2015 Environmental Management\n• Carbon Trust Standard\n• Science Based Targets Initiative (SBTi)"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>

            <!-- Contact Information -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/contactTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/contactDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Environmental Sustainability Department\nsustainability@techcorp.com\n+1 (555) 123-4567"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Report Disclaimer -->
        <TextView
            android:id="@+id/reportDisclaimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This report follows the GRI Sustainability Reporting Standards and has been verified by an independent third party."
            android:textSize="12sp"
            android:textColor="@color/gray"
            android:layout_marginTop="16dp"
            android:gravity="center"/>




    </LinearLayout>

    </ScrollView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/generatePdfButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Download PDF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>
