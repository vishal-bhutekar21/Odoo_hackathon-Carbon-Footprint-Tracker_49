<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="3"
    android:rowCount="2"
    android:padding="8dp">

    <!-- Add Emission -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddEmission"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#E8F5E9"
                app:icon="@drawable/email"
                app:iconTint="#2E7D32"
                app:iconSize="24dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Add Data"
                android:textColor="#212121"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Upload Report -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUploadReport"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#E1F5FE"
                app:icon="@drawable/email"
                app:iconTint="#0277BD"
                app:iconSize="24dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Upload Report"
                android:textColor="#212121"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- View Reports -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewReports"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#FBE9E7"
                app:icon="@drawable/email"
                app:iconTint="#D32F2F"
                app:iconSize="24dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="View Reports"
                android:textColor="#212121"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- AI Insights -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAIInsights"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#F3E5F5"
                app:icon="@drawable/email"
                app:iconTint="#9C27B0"
                app:iconSize="24dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="AI Insights"
                android:textColor="#212121"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Emission Forecast -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnForecast"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#E8EAF6"
                app:icon="@drawable/email"
                app:iconTint="#3F51B5"
                app:iconSize="24dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Forecast"
                android:textColor="#212121"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Industry Compare -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_columnWeight="1"
        android:layout_margin="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCompare"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#FFF8E1"
                app:icon="@drawable/email"
                app:iconTint="#FFA000"
                app:iconSize="24dp"
                 />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Compare"
                android:textColor="#212121"
                android:textSize="12sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</GridLayout>