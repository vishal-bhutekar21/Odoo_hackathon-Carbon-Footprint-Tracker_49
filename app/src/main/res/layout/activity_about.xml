<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <LinearLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_50"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/developer_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Our App"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aboutapp"
                    android:textColor="@color/gray_800"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="16sp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:lineSpacingExtra="4dp"
                    android:justificationMode="inter_word"
                    android:layout_marginHorizontal="8dp"
                    android:background="@android:color/transparent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet the Developers"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="16dp"
                    android:textColor="@color/text_primary" />

                <!-- Developer 1: Vishal Bhutekar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/img_vishal"
                        android:contentDescription="Portrait of Vishal Bhutekar, Full Stack Developer"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vishal Bhutekar"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textSize="18sp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-condensed"
                        android:text="Full Stack Developer"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp"
                        android:textColor="@color/text_secondary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/instagram1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="Instagram profile of Vishal Bhutekar"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/github1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_github"
                            android:contentDescription="GitHub profile of Vishal Bhutekar"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/linkedin1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_linkedin"
                            android:contentDescription="LinkedIn profile of Vishal Bhutekar"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Developer 2: Chaitany Kakde -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/img_chaitany"
                        android:contentDescription="Portrait of Chaitany Kakde, Full Stack Developer"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chaitany Kakde"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Stack Developer"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp"
                        android:textColor="@color/text_secondary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/instagram2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="Instagram profile of Chaitany Kakde"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/github2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_github"
                            android:contentDescription="GitHub profile of Chaitany Kakde"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/linkedin2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_linkedin"
                            android:contentDescription="LinkedIn profile of Chaitany Kakde"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Developer 3: Satwik Mahajan -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/user_satwik"
                        android:contentDescription="Portrait of Satwik Mahajan, Frontend Developer"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Satwik Mahajan"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frontend Developer"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp"
                        android:textColor="@color/text_secondary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/instagram3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="Instagram profile of Satwik Mahajan"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/github3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_github"
                            android:contentDescription="GitHub profile of Satwik Mahajan"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/linkedin3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_linkedin"
                            android:contentDescription="LinkedIn profile of Satwik Mahajan"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Developer 4: Karan Bankar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="16dp"
                    android:background="@drawable/card_background"
                    android:padding="16dp"
                    android:layout_marginBottom="8dp"
                    android:elevation="2dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/img_karan"
                        android:contentDescription="Portrait of Karan Bankar, Full Stack Developer"
                        android:scaleType="centerInside"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Karan Bankar"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="4dp"
                        android:textColor="@color/text_primary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Stack Developer"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="8dp"
                        android:textColor="@color/text_secondary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="center_horizontal">

                        <ImageView
                            android:id="@+id/instagram4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:contentDescription="Instagram profile of Karan Bankar"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/github4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_github"
                            android:contentDescription="GitHub profile of Karan Bankar"
                            android:padding="4dp" />

                        <ImageView
                            android:id="@+id/linkedin4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_linkedin"
                            android:contentDescription="LinkedIn profile of Karan Bankar"
                            android:padding="4dp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/ourfeedbacks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="Our Feedbacks !!"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary"
                    android:textColor="@color/white"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/white"
        android:elevation="8dp"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu"
        app:itemTextAppearance="@style/NavigationDrawerItem"
        app:itemIconTint="@color/gray_600"
        app:itemBackground="@android:color/transparent" />

</androidx.drawerlayout.widget.DrawerLayout>