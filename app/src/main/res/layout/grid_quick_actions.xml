<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="#FFF5F7FA"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Grid Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#FFFFFFFF"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cardElevation="4dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="2"
                android:background="#FFFFFFFF"
                android:padding="12dp"
                android:alignmentMode="alignMargins">

                <!-- Add Emission -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FDAE29"
                    app:rippleColor="#40FFFFFF">

                    <LinearLayout
                        android:id="@+id/add_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/adddata"
                            android:tint="#FFFFFFFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Add Data"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFFFF"
                            android:textSize="14sp"
                            android:ellipsize="none"
                            android:maxLines="2"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Social Platform -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/socialcard"
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FF81C784"
                    app:rippleColor="#40FFFFFF">

                    <LinearLayout
                        android:id="@+id/compare"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/community"
                            android:tint="@color/white"

                           />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Carbon Community"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFFFF"
                            android:textSize="12sp"
                            android:ellipsize="none"
                            android:maxLines="2"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Connect IoT -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FF64B5F6"
                    app:rippleColor="#40FFFFFF">

                    <LinearLayout
                        android:id="@+id/connectiot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/connectiot"
                            android:tint="#FFFFFFFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Connect IoT"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFFFF"
                            android:textSize="14sp"
                            android:ellipsize="none"
                            android:maxLines="2"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Upload Report -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FF9575CD"
                    app:rippleColor="#40FFFFFF">

                    <LinearLayout
                        android:id="@+id/uploadreport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/fileupload"
                            android:tint="#FFFFFFFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Upload Report"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFFFF"
                            android:textSize="14sp"
                            android:ellipsize="none"
                            android:maxLines="2"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- View Report -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FF4DD0E1"
                    app:rippleColor="#40FFFFFF">

                    <LinearLayout
                        android:id="@+id/viewreport"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/viewreport"
                            android:tint="#FFFFFFFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="View Report"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFFFF"
                            android:textSize="14sp"
                            android:ellipsize="none"
                            android:maxLines="2"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- AI Insights -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="140dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="#FFF06292"
                    app:rippleColor="#40FFFFFF">

                    <LinearLayout
                        android:id="@+id/aiinsights"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/aiinsights"
                            android:tint="#FFFFFFFF" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="AI Insights"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#FFFFFFFF"
                            android:textSize="14sp"
                            android:ellipsize="none"
                            android:maxLines="2"
                            android:gravity="center"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </GridLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- AI Insights Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="@color/primary"
            app:strokeColor="#E0E0E0"
            app:strokeWidth="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:cardBackgroundColor="#26FFFFFF"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        android:layout_marginEnd="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="🤖"
                            android:gravity="center"
                            android:textSize="26sp"/>
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AI Carbon Insights"
                        android:textColor="#FFFFFFFF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:letterSpacing="0.02"
                        android:shadowColor="#40000000"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="4"/>
                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Get AI insights for your devices.\nAnalyze emissions across all sources.\nReduce your carbon footprint effectively."
                    android:textColor="#E6FFFFFF"
                    android:textSize="15sp"
                    android:lineSpacingExtra="6dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="View Details"
                        android:textSize="14sp"
                        android:textColor="@color/primary"
                        app:backgroundTint="#FFFFFFFF"
                        app:cornerRadius="14dp"
                        app:strokeColor="@color/primary"
                        app:strokeWidth="1dp"
                        android:padding="14dp"
                        android:layout_marginEnd="8dp"
                        app:rippleColor="#80FFFFFF"
                        android:letterSpacing="0.03"
                        app:icon="@drawable/adddata"
                        app:iconGravity="start"
                        app:iconPadding="8dp"
                        app:iconTint="@color/primary"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/implement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Get Suggestions"
                        android:textSize="10sp"
                        android:textColor="#FFFFFFFF"
                        app:backgroundTint="@color/black"
                        app:cornerRadius="14dp"
                        android:padding="14dp"
                        android:layout_marginStart="8dp"
                        app:rippleColor="#80FFFFFF"

                        app:icon="@drawable/adddata"
                        app:iconGravity="start"
                        app:iconPadding="8dp"
                        app:iconTint="#FFFFFFFF"
                        style="@style/Widget.MaterialComponents.Button"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>